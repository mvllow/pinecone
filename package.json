{
	"name": "pinecone-cli",
	"version": "2.2.0",
	"description": "Lovely VSCode theme builder",
	"license": "MIT",
	"repository": "mvllow/pinecone",
	"funding": "https://github.com/mvllow/pinecone?sponsor=1",
	"author": {
		"name": "mvllow",
		"email": "mvllow@icloud.com"
	},
	"type": "module",
	"exports": "./dist/source/index.js",
	"bin": {
		"pinecone": "dist/source/cli.js",
		"pinecone-cli": "dist/source/cli.js"
	},
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"dev": "node --loader ts-node/esm source/cli.ts",
		"clean": "del-cli dist themes pinecone.config.js",
		"test": "ava",
		"release": "np",
		"build": "del-cli dist && tsc && npm test"
	},
	"files": [
		"dist/source"
	],
	"types": "dist/source",
	"keywords": [
		"dynamic",
		"vscode",
		"themes",
		"json",
		"variables"
	],
	"dependencies": {
		"chalk": "^4.1.1",
		"chokidar": "^3.5.2",
		"colorish": "^0.1.2",
		"escape-string-regexp": "^5.0.0",
		"meow": "^10.0.1",
		"prettier": "^2.3.1",
		"slugify": "^1.5.3"
	},
	"devDependencies": {
		"@types/node": "^15.12.2",
		"@types/prettier": "^2.3.0",
		"@types/sinon": "^10.0.2",
		"ava": "^3.15.0",
		"del-cli": "^4.0.0",
		"np": "^7.5.0",
		"sinon": "^11.1.1",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.2"
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"useTabs": true
	},
	"ava": {
		"files": [
			"test/*"
		],
		"extensions": {
			"ts": "module"
		},
		"nonSemVerExperiments": {
			"configurableModuleFormat": true
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	}
}
