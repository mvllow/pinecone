{
	"name": "pinecone-cli",
	"version": "3.0.1",
	"description": "Lovely VSCode theme builder",
	"license": "MIT",
	"repository": "mvllow/pinecone",
	"funding": "https://github.com/mvllow/sponsors/mvllow",
	"author": {
		"name": "mvllow",
		"email": "mvllow@icloud.com"
	},
	"type": "module",
	"exports": "./dist/index.js",
	"bin": {
		"pinecone": "dist/cli.js",
		"pinecone-cli": "dist/cli.js"
	},
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"clean": "del-cli themes pinecone.config.js",
		"build": "del-cli dist && tsc && npm test",
		"test": "xo && ava",
		"version": "npm run build"
	},
	"files": [
		"dist"
	],
	"types": "dist",
	"keywords": [
		"dynamic",
		"vscode",
		"themes",
		"json",
		"variables"
	],
	"dependencies": {
		"chalk": "^5.0.1",
		"chokidar": "^3.5.3",
		"colorish": "^0.2.1",
		"escape-string-regexp": "^5.0.0",
		"meow": "^10.1.2",
		"prettier": "^2.6.2",
		"slugify": "^1.6.5"
	},
	"devDependencies": {
		"@mvllow/tsconfig": "^0.1.0",
		"@types/node": "^17.0.23",
		"@types/prettier": "^2.4.4",
		"@types/sinon": "^10.0.11",
		"ava": "^4.1.0",
		"del-cli": "^4.0.1",
		"np": "^7.6.1",
		"sinon": "^13.0.1",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.3",
		"xo": "^0.48.0"
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	},
	"xo": {
		"prettier": "true"
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	}
}
