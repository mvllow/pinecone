{
	"name": "pinecone-cli",
	"version": "4.0.0",
	"description": "Lovely VSCode theme builder",
	"license": "MIT",
	"repository": "mvllow/pinecone",
	"funding": "https://github.com/mvllow/sponsors/mvllow",
	"author": "mvllow",
	"type": "module",
	"exports": "./dist/index.js",
	"bin": {
		"pinecone": "dist/cli.js",
		"pinecone-cli": "dist/cli.js"
	},
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"build": "del-cli dist && tsc && npm test",
		"test": "xo && ava",
		"release": "npx np@latest",
		"version": "npm run build"
	},
	"files": [
		"dist"
	],
	"types": "dist",
	"keywords": [
		"vscode",
		"vscode-themes",
		"theme",
		"variants"
	],
	"dependencies": {
		"@sindresorhus/slugify": "^2.1.1",
		"chalk": "^5.2.0",
		"chokidar": "^3.5.3",
		"colorish": "^0.2.1",
		"escape-string-regexp": "^5.0.0",
		"meow": "^11.0.0",
		"read-pkg": "^7.1.0",
		"ts-dedent": "^2.2.0",
		"write-pkg": "^5.1.0"
	},
	"devDependencies": {
		"@esbuild-kit/esm-loader": "^2.5.4",
		"@mvllow/tsconfig": "^0.2.2",
		"@types/node": "^18.11.18",
		"@types/sinon": "^10.0.13",
		"ava": "^5.1.1",
		"del-cli": "^5.0.0",
		"np": "^7.6.3",
		"prettier": "^2.8.3",
		"sinon": "^15.0.1",
		"tempy": "^3.0.0",
		"typescript": "^4.9.4",
		"xo": "^0.53.1"
	},
	"prettier": {
		"bracketSpacing": false,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	},
	"xo": {
		"prettier": "true",
		"ignores": [
			"./themes",
			"./pinecone.config.js"
		],
		"rules": {
			"unicorn/no-array-reduce": "off"
		}
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=@esbuild-kit/esm-loader"
		]
	}
}
