{
	"name": "pinecone-cli",
	"version": "3.0.1",
	"description": "Lovely VSCode theme builder",
	"license": "MIT",
	"repository": "mvllow/pinecone",
	"funding": "https://github.com/mvllow/sponsors/mvllow",
	"author": "mvllow",
	"type": "module",
	"exports": "./dist/index.js",
	"bin": {
		"pinecone": "dist/cli.js",
		"pinecone-cli": "dist/cli.js"
	},
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"build": "del-cli dist && tsc && npm test",
		"test": "ava",
		"release": "np",
		"version": "npm run build"
	},
	"files": [
		"dist"
	],
	"types": "dist",
	"keywords": [
		"vscode",
		"vscode-themes",
		"theme",
		"variants"
	],
	"dependencies": {
		"@sindresorhus/slugify": "^2.1.1",
		"chalk": "^5.2.0",
		"chokidar": "^3.5.3",
		"colorish": "^0.2.1",
		"escape-string-regexp": "^5.0.0",
		"meow": "^11.0.0",
		"prettier": "^2.8.3"
	},
	"devDependencies": {
		"@mvllow/tsconfig": "^0.2.2",
		"@types/node": "^18.11.18",
		"@types/prettier": "^2.7.2",
		"ava": "^5.1.1",
		"del-cli": "^5.0.0",
		"np": "^7.6.3",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4",
		"xo": "^0.53.1"
	},
	"prettier": {
		"bracketSpacing": false,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	},
	"xo": {
		"prettier": "true",
		"ignores": [
			"./themes",
			"./pinecone.config.js"
		]
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	}
}
